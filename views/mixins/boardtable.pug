mixin boardtable(ppd=false, activity=false, owner=false)
	.table-container.flex-center.mv-10.text-center
		table(class=`boardtable${activity ? ' w900' : ''}`)
			tr
				th #{__('Board')}
				if owner
					th #{__('Owner')}
				th #{__('Description')}
				th(nowrap) #{__('This Hour')}
				if ppd
					th.nobreak #{__('Today')}
				//th.nobreak #{__('Users')}
				th.nobreak(nowrap) #{__('Total Posts')}
				if activity
					th.nobreak #{__('Latest Activity')}
			block
